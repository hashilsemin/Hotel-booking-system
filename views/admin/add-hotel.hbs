
<div style=" height: 700px; padding: 1px; background-color: rgb(235, 235, 235)">
  <div class="sidenav">
    <h1
      style="color: bla ck; font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; margin-left: 10px; margin-top: 5px;text-shadow: 2px 2px orange;">
      TRAVELIX</h1>
    <hr>
{{#if admin}}
<span style="margin-left: 10px; font-weight: bolder;">Welcome {{admin.Name}}</span>
{{/if}}
    <div class="option">
      <a style="margin-top: 51px;" href="/admin">Home</a>
      <hr color="white">
      <a href="/admin/hotels">Hotels</a>
      <hr color="white">
      <a href="#clients">Users</a>
      <hr color="white">
       <a href="/admin/requests">Hotel requests</a>
      <hr color="white">
    </div>
    <a style="color: crimson;" href='/admin/logout'>Logout</a>
    <hr color="white">

  </div>

<div class="main"><section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add hotel</h2>

                <form action="/admin/add-hotel" method="POST">

                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{hotel.Name}}">
                     <label for="">Email</label>
                    
                    <input type="text" name="Email" class="form-control" value="{{hotel.Email}}">

           

                    <label for="">Mobile number</label>
                    <input type="text" name="Mobile" class="form-control" value="{{hotel.Mobile}}">
                    <input type="hidden" class="form-control" name="Status" value="accepted">
                    <label for="">Place</label>
                    
                    <input type="text" name="City" class="form-control" value="{{hotel.City}}">




                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
              
            </div>
        </div>
    </div>
</section>
</div>

</div>
