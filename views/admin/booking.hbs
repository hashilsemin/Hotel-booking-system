<div style=" height: 700px; padding: 1px; background-color: rgb(235, 235, 235)">
    <div class="sidenav">
        <h1
            style="color: bla ck; font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; margin-left: 10px; margin-top: 5px;text-shadow: 2px 2px orange;">
            TRAVELIX</h1>
        <hr>
        {{#if admin}}
        <span style="margin-left: 10px; font-weight: bolder;">Welcome {{admin.Name}}</span>
        {{/if}}
        <div class="option">
            <a style="margin-top: 51px;" href="/admin">Home</a>
            <hr color="white">
            <a href="/admin/hotels">Hotels</a>
            <hr color="white">
            <a href="#clients">Users</a>
            <hr color="white">
            <a href="/admin/booking">Bookings</a>
            <hr color="white">
            <a href="/admin/cities">Cities</a>
            <hr color="white">

            <a class="nav-link" href="/admin/requests">Hotel requests<span class="badge badge-danger"
                    id="cart-count">{{reqCount}}</span></a>
            <hr color="white">
        </div>
        <a style="color: crimson;" href='/admin/logout'>Logout</a>
        <hr color="white">

    </div>

    {{#each booking}}
    <div class="card" style="height: 280px;padding: 10px;  margin-left: 310px; margin-top: 60px; width: 750px;  ">
        <div class="card-horizontal">
            <div class="img-square-wrapper" style="float: left;">
                <img style="width: 220px;padding: 20px; height: 260px; width: 330px;" class="" src="/room-images/{{this.hotelId}}.jpg"
                    alt="Card image cap">
            </div>
            <div class="card-body" style="margin-left: 290px; ">
                <h4 class="card-title">{{hotelName}}</h4>
                <p class="card-text">{{Type}}</p>
                <p class="card-text"> Email:{{Email}}</p>
                <p class="card-text">check in :{{checkIn}}</p>

                <p class="card-text">check out :{{checkOut}}</p>

                <a href="/admin/cancelBooking/{{_id}}" class="btn btn-danger"
                    onclick="return confirm('Are you sure you want to cancel {{Email}}'s booking' ? ')">Cancel this booking
                </a>

              

            </div>
        </div>
    </div>
    {{/each}}

    <style>
        .zoom {

            transition: transform .2s;
            /* Animation */

        }

        .zoom:hover {
            transform: scale(1.1);
            /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
        }

        .option:hover li:hover a {
            opacity: 0.6;
        }

        .option:hover li:hover a:hover {
            opacity: 1;
        }



        .main {

            margin-left: 340px;
            margin-top: 50px;

        }

        .sidenav {

            height: 100%;
            width: 260px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #f7ca28;
            overflow-x: hidden;
            padding-top: 20px;
        }

        .sidenav a {

            padding: 1px 12px 1px;
            text-decoration: none;
            font-size: 18px;
            color: black;
            display: block;
        }

        .sidenav a:hover {
            color: white;

        }





        @media screen and (max-height: 450px) {
            .sidenav {
                padding-top: 15px;
            }

            .sidenav a {
                font-size: 18px;
            }
        }
    </style>