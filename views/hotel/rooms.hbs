<div style=" height: 800px; padding: 1px; background-color: rgb(235, 235, 235)">
  <div class="sidenav">
    <h1
      style="color: bla ck; font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; margin-left: 10px; margin-top: 5px;">
      TRAVELIX </h1>
 
    {{#if hotelName}}
    <span style="margin-left: 10px; font-weight: bolder;">Welcome {{hotelName.Name}}</span>
    {{/if}}
      <hr>
    <div class="option">
      <a style="margin-top: 51px;" href="/hotel">Home</a>
      <hr color="white">
      <a href="/hotel/rooms">Rooms</a>
      <hr color="white">
      <a href="#clients">Customer</a>
      <hr color="white">
      <a href="#clients">Features</a>
      <hr color="white">
 {{#if hotel}}
       <a href="/hotel/updateProfile/{{hotel._id}}">Update profile</a>
      <hr color="white">    {{/if}}
    </div> 
    <a style="color: rgb(0, 0, 0);" href='/hotel/logout'>Logout</a>
    <hr color="white">

  </div>

    <div class="main">
<section>
    <div class="container">
        <div class="row">
            <a href="/hotel/add-Room" class="btn btn-primary ml-auto mt-2">Add Room</a>
        </div>
        <div style="margin-top: 50px;">
        <table  class="table mt-4" id="productsTable">
  <thead>
    <tr>
      <th scope="col"></th>
       <th scope="col">Photo</th>
      <th scope="col">Type</th>
        <th scope="col">Available</th>
        <th scope="col">Price</th>
        <th scope="col">Aminities</th>
        <th scope="col">Description</th>
   
      
 
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each rooms}}
    <tr>
     <td></td>
      <td><img style="height=25px;width:150px " src="/room-images/{{this._id}}.jpg" alt=""></td>
      <td>{{this.Type}}</td>
       <td>{{this.Available}}</td>
        <td>{{this.Price}}</td>
         <td>{{#if AC}}AC {{/if}},
           {{#if Freewifi}}Freewifi  {{/if}}
             {{#if Heater}}Heater  {{/if}}
               {{#if Smokingroom}}Smokingroom  {{/if}}
                 {{#if TV}}TV{{/if}}
                   {{#if Newspaper}}Newspaper {{/if}}
                     {{#if Ironbox}}Ironbox  {{/if}}
                       {{#if Slippers}}Slippers  {{/if}}
                         {{#if Minibar}}Minibar {{/if}}
                           {{#if Airpurifier}}Airpurifier {{/if}}
                             {{#if Telephone}}Telephone  {{/if}}
                               {{#if Housekeeping}}Housekeeping  {{/if}}
                                 {{#if Snackbasket}}Snackbasket {{/if}}
                                   {{#if Smokealarm}}Smokealarm {{/if}}
                                     {{#if Toiletpaper}}Toiletpaper  {{/if}}
                                       {{#if Balcony}}Balcony  {{/if}}
         </td>
        
    <td>{{this.Description}}</td>
   
    <td>
      
        <a href="/hotel/delete-room/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Type}} ? ')">Delete</a>
      <a href="/hotel/edit-room/{{this._id}}" class="btn btn-success">Edit</a>
      
      </td>

    </tr>
  {{/each}}
  </tbody>
</table>
</div>
    </div> 
</section>
</div>
</div>
<style>
  table.dataTable thead tr {
  background-color: #10c5e6;
}
  .table {
  max-width:100px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
    .zoom {

    transition: transform .2s;
    /* Animation */

  }

  .zoom:hover {
    transform: scale(1.1);
    /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
  }
  .option:hover li:hover a {
    opacity: 0.6;
  }

  .option:hover li:hover a:hover {
    opacity: 1;
  }


  .card :hover {
    background-color: #f7ca28;

  }

  .main {

    margin-left: 300px;
    margin-top: 50px;

  }

  
      .sidenav {

        height: 100%;
        width: 260px;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #ff4e4e;
        overflow-x: hidden;
        padding-top: 20px;
      }

  .sidenav a {

    padding: 1px 12px 1px;
    text-decoration: none;
    font-size: 18px;
    color: black;
    display: block;
  }

  .sidenav a:hover {
    color: white;

  }

 



  @media screen and (max-height: 450px) {
    .sidenav {
      padding-top: 15px;
    }

    .sidenav a {
      font-size: 18px;
    }
  }
</style>
<script>
$(document).ready( function () {
  var table = $('#productsTable').DataTable({
    columnDefs:[{targets:5,className:"table"}],
    createdRow: function(row){
       var td = $(row).find(".table");
       td.attr("title", td.html());
  }
  });
} );

  $(document).ready(function() {
    var t = $('#productsTaable').DataTable( {
        "columnDefs": [ {
            "searchable": false,
            "orderable": false,
            "targets": 0
        } ],
        "order": [[ 1, 'asc' ]]
    } );
 
    t.on( 'order.dt search.dt', function () {
        t.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
            cell.innerHTML = i+1;
        } );
    } ).draw();
} );
</script>